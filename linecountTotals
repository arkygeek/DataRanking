echo "number of lines in all .cpp files:"
find . -name "*build*" -prune -o -name "*."cpp -exec wc -l {} \+ | grep total
echo "number of lines in all .h (header) files:"
find . -name "*build*" -prune -o -name "*."h -exec wc -l {} \+ | grep total
